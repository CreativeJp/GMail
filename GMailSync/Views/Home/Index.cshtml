@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function SynchPatientDocuments() {
        $.ajax({
            url: '@Url.Action("MailSync", "Home")',
            type: 'post',
            data: {},
            contentType: 'application/x-www-form-urlencoded;charset=utf-8',
            success: function (data) {
                if (data != null) {
                    setTimeout(function () {
                        if (data.message != null && data.message != '') {
                            alert(data.message);
                            location.reload();
                        }
                    }, 100)
                }
            }
        });
    }
</script>
<div class="jumbotron">
    <button id="btnsynchmail" class="btn btn-primary" onclick="return SynchPatientDocuments();">
        Synchronize
    </button>
</div>